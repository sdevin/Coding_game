package Objects;

import javafx.scene.paint.Color;

public class Light{
	
	private Color color;
	protected int x; 
	protected int y;
	protected int width;


	public Light(Color color, int x, int y, int width ) {
		this.color = color;
		this.x = x;
		this.y = y;
		this.width = width;
	}

	public Color getColor() {
		return color;
	}

	public void changeColor(Color color) {
		this.color = color;
	}

	public int getX() {
		return x;
	}

	public int getY() {
		return y;
	}

	public int getWidth() {
		return width;
	}
}
